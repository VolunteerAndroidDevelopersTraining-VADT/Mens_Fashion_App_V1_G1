<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <item name="boxBackgroundColor">@color/white</item>
            <item name="boxCornerRadiusBottomEnd">12dp</item>
            <item name="boxCornerRadiusBottomStart">12dp</item>
            <item name="boxCornerRadiusTopStart">12dp</item>
            <item name="boxCornerRadiusTopEnd">12dp</item>
            <item name="hintTextColor">@color/black</item>
            <item name="android:textColorHint">@color/black</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">14sp</item>
            <item name="hintEnabled">false</item>
           <item name="backgroundTint">@color/white</item>
            <item name="boxStrokeWidth">1dp</item>
            <item name="android:gravity">center</item>
           <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">16dp</item>

        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
            <item name="boxStrokeColor">@color/black</item>

            <item name="materialThemeOverlay">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item></style>

        <style name="Widget.App.EditTextLayout" parent="">
            <item name="editTextStyle">@style/MyTextInputEditText</item>
        </style>


        <style name="MyTextInputEditText" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
            <item name="android:padding">16dp</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textAlignment">viewStart</item>
            <item name="android:textSize">16sp</item>

        </style>


    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
    <item name="android:layout_margin">16dp</item>
    <item name="elevation">2dp</item>
    <item name="cardElevation">2dp</item>
    <item name="cardCornerRadius">16dp</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
       <item name="android:padding">16dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>

    </style>


</resources>